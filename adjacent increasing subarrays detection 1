class Solution:
    def hasIncreasingSubarrays(self, nums, k):
        n = len(nums)
        if n < 2 * k:
            return False
        # inc[i] = length of increasing sequence ending at index i
        inc = [1] * n
        for i in range(1, n):
            if nums[i] > nums[i - 1]:
                inc[i] = inc[i - 1] + 1
        # Check for two adjacent increasing subarrays of length k
        for i in range(k - 1, n - k):
            if inc[i] >= k and inc[i + k] >= k:
                return True
        return False
