class Solution:
    def threeSumClosest(self, nums, target):
        nums.sort()
        closest_sum = float('inf')
        for i in range(len(nums) - 2):
            l, r = i + 1, len(nums) - 1
            while l < r:
                total = nums[i] + nums[l] + nums[r]
                if abs(target - total) < abs(target - closest_sum):
                    closest_sum = total
                if total < target:
                    l += 1
                elif total > target:
                    r -= 1
                else:
                    return total 
        return closest_sum
