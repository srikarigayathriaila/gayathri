class Solution:
    def removeAnagrams(self, words):
        result = []
        prev_sorted = ""
        for word in words:
            sorted_word = ''.join(sorted(word))
            # Only keep the word if it's not an anagram of the previous one
            if sorted_word != prev_sorted:
                result.append(word)
                prev_sorted = sorted_word
        return result
