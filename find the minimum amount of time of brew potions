class Solution(object):
    def minTime(self, skill, mana):
        n = len(skill)
        time = [0] * n
        for x in range(len(mana)):
            time[0] = time[0] + skill[0] * mana[x]
            for i in range(1, n):
                time[i] = max(time[i], time[i - 1]) + skill[i] * mana[x]
            for i in range(n - 2, -1, -1):
                time[i] = time[i + 1] - skill[i + 1] * mana[x]
        return time[-1]
